{
	"version": "2.0.0",
	"tasks": [
    {
      "type": "cargo",
      "command": "build",
      "problemMatcher": [
        "$rustc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "label": "Cargo Build"
    },
    {
      "type": "cargo",
      "command": "doc",
      "args": [
        "-p", "secs-ii",
        "-p", "gem",
        "-p", "hsms",
        "--no-deps",
        "--open"
      ],
      "problemMatcher": [
        "$rustc"
      ],
      "group": {
        "kind": "none"
      },
      "label": "Cargo Doc"
    }
  ]
}